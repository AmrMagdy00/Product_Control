@model List<MyApp.Models.Item>

@{
    ViewData["Title"] = "Products";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center my-4 display-4 font-weight-bold text-white animate__animated animate__fadeInDown"
    style="background: linear-gradient(to right, #008070e8, #ff0000bd);padding: 20px;border-radius: 10px;">
    Products List
</h3>

<div class="container mt-5">
    <table class="table table-hover table-striped table-bordered shadow-lg animate__animated animate__fadeIn"
           style="background-color: #f7f9fc; border-radius: 10px;">
        <thead class="bg-dark text-white">
            <tr>
                <th scope="col" class="h5 font-weight-bold">Name</th>
                <th scope="col" class="h5 font-weight-bold">Price</th>
                <th scope="col" class="h5 font-weight-bold">Serial Number</th>
                <th scope="col" class="h5 font-weight-bold">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="animate__animated animate__fadeInUp">
                    <td class="h6 font-weight-bold">@item.Name</td>
                    <td class="h6 font-weight-bold">@item.Price.ToString("N2")</td>
                    <td class="h6 font-weight-bold">@item.SerialNumber?.Name</td>
                    <td>
                        <a class="btn btn-success btn-sm animate__animated animate__pulse animate__infinite"
                           asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a class="btn btn-danger btn-sm animate__animated animate__pulse animate__infinite"
                           asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Include FontAwesome for icons and Animate.css for animations -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
