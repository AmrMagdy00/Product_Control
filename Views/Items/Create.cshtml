@model MyApp.Models.Item

@{
    ViewData["Title"] = "Create Product";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center my-4 display-4 font-weight-bold text-white animate__animated animate__fadeInDown"
    style="background: linear-gradient(to right, #008070e8, #ff0000bd);padding: 20px;border-radius: 10px;">
    Create Product
</h3>

<div class="container mt-5">
    <form asp-action="Create" method="post" class="shadow-lg p-4 bg-light rounded animate__animated animate__fadeInUp">
        <div class="form-group mb-3">
            <label for="Name" class="font-weight-bold">Name</label>
            <input type="text" class="form-control form-control-lg" asp-for="Name" placeholder="Enter product name" required />
        </div>
        <div class="form-group mb-3">
            <label for="Price" class="font-weight-bold">Price</label>
            <input type="number" class="form-control form-control-lg" asp-for="Price" placeholder="Enter product price" required />
        </div>
        <div class="form-group mb-3">
            <label for="CategoryId" class="font-weight-bold">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control form-control-lg"></select>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg px-5">Submit</button>
        </div>
    </form>
</div>

<!-- Include FontAwesome for icons and Animate.css for animations -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
