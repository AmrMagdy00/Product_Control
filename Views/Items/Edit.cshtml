@model MyApp.Models.Item

@{
    ViewData["Title"] = "Edit Product";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <h2 class="text-center mb-4 display-4 font-weight-bold">Edit Product [ @Model.Name ]</h2>

    <form asp-action="Edit" method="post" class="shadow-lg p-4 bg-light rounded animate__animated animate__fadeInUp">
        <input type="hidden" asp-for="Id" />
        <div class="form-group mb-3">
            <label for="Name" class="font-weight-bold">Name</label>
            <input asp-for="Name" class="form-control form-control-lg" id="Name" required />
        </div>
        <div class="form-group mb-3">
            <label for="Price" class="font-weight-bold">Price</label>
            <input asp-for="Price" type="number" class="form-control form-control-lg" id="Price" required />
        </div>
        <div class="form-group mb-3">
            <label for="SerialNumber" class="font-weight-bold">Serial Number</label>
            <input asp-for="SerialNumber.Name" type="text" class="form-control form-control-lg" id="SerialNumber" disabled />
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-lg px-5">Submit</button>
        </div>
    </form>
</div>
