<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Product Control</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Set the body and html to fill the entire viewport */
        html, body {
            height: 100%;
            margin: 0;
        }

        /* Create a flex container that fills the viewport */
        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Make the content take up remaining space */
        .content {
            flex: 1;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <header class="bg-dark text-light p-3 shadow-sm">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container">
                    <a class="navbar-brand" href="#">Product Control</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" asp-controller="Items">Product List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Create" asp-controller="Items">Add Product</a>

                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container mt-5 content">
            @RenderBody()
        </div>

        <footer class="bg-dark text-light p-3 mt-auto">
            <div class="container">
                &copy; 2024 - Product Control
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



